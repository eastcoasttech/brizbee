<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Brizbee.Mobile.Views.StatusPage"
             xmlns:vm="clr-namespace:Brizbee.Mobile.ViewModels"
             Title="{Binding Title}">
    <ContentPage.BindingContext>
        <vm:StatusViewModel />
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <StackLayout Padding="40" BackgroundColor="#f5f5f5">
            <Label Text="Hello" HorizontalTextAlignment="Center" FontSize="Small" TextColor="Gray" Margin="0, 0, 0, 0" />
            <Label Text="{Binding Name}" HorizontalTextAlignment="Center" FontSize="Medium" FontAttributes="Bold" Margin="0, 0, 0, 0" />
            <Label HorizontalTextAlignment="Center" IsVisible="{Binding IsPunchedOut}" Margin="0, 15, 0, 20">
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="YOU ARE " />
                        <Span Text="PUNCHED OUT" FontAttributes="Bold" ForegroundColor="Red" />
                    </FormattedString>
                </Label.FormattedText>
            </Label>
            <Label HorizontalTextAlignment="Center" IsVisible="{Binding IsPunchedIn}" Margin="0, 15, 0, 20">
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="YOU ARE " />
                        <Span Text="PUNCHED IN" FontAttributes="Bold" ForegroundColor="Green" />
                    </FormattedString>
                </Label.FormattedText>
            </Label>
            <Label Text="ON JOB" HorizontalTextAlignment="Center" IsVisible="{Binding IsPunchedIn}" FontSize="Micro" Margin="0, 20, 0, 0" />
            <Label Text="{Binding CurrentJob}" HorizontalTextAlignment="Center" IsVisible="{Binding IsPunchedIn}" FontSize="Medium" FontAttributes="Bold" />
            <Label Text="FOR CUSTOMER" HorizontalTextAlignment="Center" IsVisible="{Binding IsPunchedIn}" FontSize="Micro" Margin="0, 20, 0, 0" />
            <Label Text="{Binding CurrentCustomer}" HorizontalTextAlignment="Center" IsVisible="{Binding IsPunchedIn}" FontSize="Medium" FontAttributes="Bold" />
            <Label Text="DOING TASK" HorizontalTextAlignment="Center" IsVisible="{Binding IsPunchedIn}" FontSize="Micro" Margin="0, 20, 0, 0" />
            <Label Text="{Binding CurrentTask}" HorizontalTextAlignment="Center" IsVisible="{Binding IsPunchedIn}" FontSize="Medium" FontAttributes="Bold" />
            <Label Text="{Binding Since}" HorizontalTextAlignment="Center" IsVisible="{Binding IsPunchedIn}" FontSize="Micro" Margin="0, 35, 0, 0" />
            <Button Text="PUNCH IN" x:Name="btnPunchIn" Clicked="BtnPunchIn_Clicked" Margin="0, 30, 0, 0" />
            <Button Text="PUNCH OUT" x:Name="btnPunchOut" Clicked="BtnPunchOut_Clicked" IsVisible="{Binding IsPunchedIn}" />
            <Button Text="EXIT" x:Name="btnExit" Clicked="BtnExit_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>