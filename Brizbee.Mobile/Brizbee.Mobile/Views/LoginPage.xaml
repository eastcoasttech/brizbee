<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Brizbee.Mobile.Views.LoginPage">
    <ContentPage.Content>
        <StackLayout Padding="30">
            <Image Source="logo.png" HeightRequest="60" Margin="0,80,0,80" HorizontalOptions="Center" />
            <Entry Placeholder="Your Organization Code" />
            <Entry Placeholder="Your PIN Number" />
            <Button Text="Login" Clicked="Button_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>