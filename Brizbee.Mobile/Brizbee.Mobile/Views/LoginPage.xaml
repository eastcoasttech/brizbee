<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Brizbee.Mobile.Views.LoginPage"
             xmlns:vm="clr-namespace:Brizbee.Mobile.ViewModels"
             Title="{Binding Title}">
    <ContentPage.BindingContext>
        <vm:LoginViewModel />
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <StackLayout Padding="40" BackgroundColor="#f5f5f5">
            <Image Source="logo.png" HeightRequest="60" Margin="0,80,0,80" HorizontalOptions="Center" />
            <Entry Placeholder="Your Organization Code" Text="{Binding OrganizationCode}" IsEnabled="{Binding IsEnabled}" />
            <Entry Placeholder="Your PIN Number" Text="{Binding PinNumber}" IsEnabled="{Binding IsEnabled}" />
            <Button Text="LOGIN" Command="{Binding LoginCommand}" IsEnabled="{Binding IsEnabled}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>