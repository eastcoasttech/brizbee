<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Brizbee.Mobile.Views.LoginPage">
    <ContentPage.Content>
        <StackLayout>
            <Image Source="Images/logo.png" HeightRequest="100" HorizontalOptions="Center" />
            <Label Text="Let's get started!" HorizontalOptions="Center" />
            <Entry Placeholder="Your Organization Code" />
            <Entry Placeholder="Your PIN Number" />
            <Button Text="Login" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>