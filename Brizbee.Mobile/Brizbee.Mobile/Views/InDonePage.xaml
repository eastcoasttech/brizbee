<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Brizbee.Mobile.Views.InDonePage"
             xmlns:vm="clr-namespace:Brizbee.Mobile.ViewModels"
             Title="{Binding Title}">
    <ContentPage.BindingContext>
        <vm:InDoneViewModel />
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <StackLayout Padding="40" BackgroundColor="#f5f5f5">
            <Label HorizontalTextAlignment="Center" Margin="0, 30, 0, 30">
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="YOU ARE NOW PUNCHED " />
                        <Span Text="IN" FontAttributes="Bold" ForegroundColor="Green" />
                        <Span Text="." />
                    </FormattedString>
                </Label.FormattedText>
            </Label>
            <Button Text="MORE OPTIONS" Command="{Binding MoreCommand}" />
            <Button Text="EXIT" Command="{Binding ExitCommand}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>