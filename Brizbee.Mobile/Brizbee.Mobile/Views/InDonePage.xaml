<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Brizbee.Mobile.Views.InDonePage"
             xmlns:vm="clr-namespace:Brizbee.Mobile.ViewModels"
             Title="{Binding Title}">
    <ContentPage.BindingContext>
        <vm:InDoneViewModel />
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <StackLayout Padding="40" BackgroundColor="#f5f5f5">
            <Label Text="All Done" HorizontalTextAlignment="Center" FontAttributes="Bold" />
            <Button Text="MORE OPTIONS" x:Name="btnStatus" />
            <Button Text="EXIT" x:Name="btnExit" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>