<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Brizbee.Mobile.Views.OutConfirmPage"
             xmlns:vm="clr-namespace:Brizbee.Mobile.ViewModels"
             Title="{Binding Title}">
    <ContentPage.BindingContext>
        <vm:OutConfirmViewModel />
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="40" BackgroundColor="#f5f5f5">
                <Label HorizontalTextAlignment="Center" Margin="0, 30, 0, 30">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="ARE YOU SURE YOU WANT TO PUNCH " />
                            <Span Text="OUT" FontAttributes="Bold" ForegroundColor="Red" />
                            <Span Text="?" />
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
                <Button Text="SAVE AND CONTINUE" Command="{Binding PunchOutCommand}" />
                <Button Text="CANCEL" x:Name="btnCancel" Clicked="BtnCancel_Clicked" />
                <ActivityIndicator
                IsVisible="{Binding IsBusy}"
                IsRunning="{Binding IsBusy}"
                Color="Black" />
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>