<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Brizbee.Mobile.Views.OutConfirmPage"
             xmlns:vm="clr-namespace:Brizbee.Mobile.ViewModels"
             Title="{Binding Title}">
    <ContentPage.BindingContext>
        <vm:OutConfirmViewModel />
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <StackLayout Padding="40" BackgroundColor="#f5f5f5">
            <Label Text="Please Confirm" />
            <Label HorizontalTextAlignment="Center">
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="ARE YOU SURE YOU WANT TO PUNCH " />
                        <Span Text="OUT" FontAttributes="Bold" ForegroundColor="Red" />
                        <Span Text="?" />
                    </FormattedString>
                </Label.FormattedText>
            </Label>
            <Button Text="SAVE AND EXIT" x:Name="btnSave" Clicked="BtnSave_Clicked" />
            <Button Text="CANCEL" x:Name="btnCancel" Clicked="BtnCancel_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>