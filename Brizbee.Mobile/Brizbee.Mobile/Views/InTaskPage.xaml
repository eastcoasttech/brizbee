<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Brizbee.Mobile.Views.InTaskPage"
             xmlns:vm="clr-namespace:Brizbee.Mobile.ViewModels"
             Title="{Binding Title}">
    <ContentPage.BindingContext>
        <vm:InTaskViewModel />
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <StackLayout Padding="40" BackgroundColor="#f5f5f5">
            <StackLayout Margin="0, 30, 0, 30">
                <Label Text="WHAT IS YOUR TASK NUMBER?" HorizontalTextAlignment="Center" />
                <Entry Placeholder="Task Number" x:Name="txtTaskNumber" Text="{Binding TaskNumber}" IsEnabled="{Binding IsEnabled}" Margin="0, 10, 0, 0" />
            </StackLayout>
            <Button Text="CONTINUE" x:Name="btnContinue" Command="{Binding ContinueCommand}" IsEnabled="{Binding IsEnabled}" />
            <Button Text="CANCEL" x:Name="btnCancel" Clicked="BtnCancel_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>