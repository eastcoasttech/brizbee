                                <i class="fas fa-mobile-alt" title="Mobile"></i>
                                break;
                            case "Dashboard":
                                <i class="fas fa-pen-square" title="Dashboard"></i>
                                break;
                            case "Phone":
                                <i class="fas fa-phone" title="Phone"></i>
                                break;
                            case "Web":
