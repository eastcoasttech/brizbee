                        {
                            <span class="fa fa-caret-up"></span>
                        }
                        else if (sortBy == "Jobs/Number" && sortDirection == "DESC")
                        {
                            <span class="fa fa-caret-down"></span>
                        }
                    </a>
                </th>
                <th style="width: 14%;">
                    <a href="javascript:void(0)" @onclick="@(e => ChangeSortBy("Tasks/Number"))">
